<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_input_border"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/spacing_small"
    android:paddingVertical="@dimen/spacing_tiny"
    android:layout_marginBottom="@dimen/spacing_tiny">

    <TextView
        android:id="@+id/btn_delete_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginEnd="@dimen/spacing_small"
        android:text="@string/history_record_delete_short"
        android:textSize="@dimen/text_caption"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:background="@drawable/bg_history_action"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_server_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_weight="1"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_body"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>

