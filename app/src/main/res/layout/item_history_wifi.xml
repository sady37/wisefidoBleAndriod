<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_input_border"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/spacing_small"
    android:paddingVertical="@dimen/spacing_tiny"
    android:layout_marginBottom="@dimen/spacing_tiny">

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginEnd="@dimen/spacing_small"
        android:text="@string/history_record_delete_short"
        android:textSize="@dimen/text_caption"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:background="@drawable/bg_history_action"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_wifi_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_body"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/btn_reveal"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/history_wifi_reveal"
        android:padding="4dp"
        android:src="@drawable/ic_visibility_24"
        app:tint="@color/text_secondary" />

</LinearLayout>
